{
  "name": "minimalist-productivity",
  "version": "1.0.0",
  "description": "A minimalist productivity app with task tracking and time management",
  "main": "electron/main.js",
  "scripts": {
    "android:build": "next build && npx cap sync && npx cap open android",
    "build": "next build",
    "dev": "concurrently \"npm run next:dev\" \"npm run electron:dev\"",
    "dist": "npm run build && npm run electron:build",
    "electron:build": "electron-builder",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "next:dev": "next dev",
    "start": "next start"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/local-notifications": "latest",
    "@capacitor/storage": "latest",
    "@radix-ui/react-dialog": "latest",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-progress": "latest",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-switch": "latest",
    "@radix-ui/react-tooltip": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "latest",
    "fs": "latest",
    "googleapis": "^126.0.1",
    "lucide-react": "^0.454.0",
    "next": "^15.3.1",
    "path": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "latest",
    "tailwind-merge": "^2.5.5",
    "webextension-polyfill": "latest"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "@types/node": "^22",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.1",
    "postcss": "^8.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.minimalist.productivity",
    "productName": "Minimalist Productivity",
    "files": [
      "out/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    }
  }
}